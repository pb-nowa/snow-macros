{
    "name": "SNMacros",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["https://*.service-now.com/*", "activeTab", "declarativeContent", "storage", "tabs", "downloads"],
    "content_scripts": [
      {
        "matches": ["https://*.service-now.com/*"],
        "run_at": "document_idle",
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": ["shadowBreaker.js"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "images/snow.ico",
          "32": "images/snow.ico",
          "48": "images/snow.ico",
          "128": "images/snow.ico"
        }
    },
    "icons": {
        "16": "images/snow.ico",
        "32": "images/snow.ico",
        "48": "images/snow.ico",
        "128": "images/snow.ico"
    },
    "commands": {
        "redirect_to_sys_user": {
          "suggested_key": {
            "default": "Alt+Shift+U",
            "mac": "Alt+Shift+U"
          },
          "description": "Redirect to sys_user"
        },
        "redirect_to_sys_user_group": {
          "suggested_key": {
            "default": "Alt+Shift+G",
            "mac": "Alt+Shift+G"
          },
          "description": "Redirect to sys_user_group"
        },
        "redirect_to_tables": {
          "suggested_key": {
            "default": "Alt+Shift+T",
            "mac": "Alt+Shift+T"
          },
          "description": "Redirect to Tables"
        }

      },
    "manifest_version": 2

}
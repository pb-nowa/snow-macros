{
    "name": "SNMacros",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["https://*.service-now.com/*", "activeTab", "declarativeContent", "storage"],
    "content_scripts": [
      {
        "matches": ["https://*.service-now.com/*"],
        "run_at": "document_end",
        "js": ["contentScript.js"]
      }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "images/get_started16.png",
          "32": "images/get_started32.png",
          "48": "images/get_started48.png",
          "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "commands": {
        "create_new": {
          "suggested_key": {
            "default": "Alt+Shift+N",
            "mac": "Alt+Shift+N"
          },
          "description": "Toggle feature foo"
        },
        "_execute_browser_action": {
          "suggested_key": {
            "windows": "Ctrl+Shift+Y",
            "mac": "Command+Shift+Y",
            "chromeos": "Ctrl+Shift+U",
            "linux": "Ctrl+Shift+J"
          }
        },
        "_execute_page_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+E",
            "windows": "Alt+Shift+P",
            "mac": "Alt+Shift+P"
          }
        }
      },
    "manifest_version": 2

}

